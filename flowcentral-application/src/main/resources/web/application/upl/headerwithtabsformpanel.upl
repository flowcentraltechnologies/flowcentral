!fc-headerwithtabsformpanel mainForm:$c{mainFormPanel}

!ui-panel:mainFormPanel styleClass:$e{formbase} layout:$d{!ui-vertical style:$s{width:100%;}}
	components:$c{headerMiniForm commentsPanel altActionPanel formTabSheetPanel relatedListPanel}
 
// Header
!fc-miniform:headerMiniForm binding:headerForm

// Tab sheet
!ui-panel:formTabSheetPanel styleClass:$s{cltabsection} components:$c{formTabSheet}
!fc-tabsheet:formTabSheet binding:tabSheet

// Related lists // TODO Move to common base form panel
!ui-panel:relatedListPanel styleClass:$s{rltabsection} layout:$d{!ui-vertical style:$s{width:100%;}}
	components:$c{relatedListTitle relatedListTabSheet}
!ui-label:relatedListTitle styleClass:$s{reltitle} caption:$s{Related Lists}
!fc-tabsheet:relatedListTabSheet binding:relatedListTabSheet

// Comments panel
!fc-commentspanel:commentsPanel binding:comments

// Alt buttons
!ui-panel:altActionPanel styleClass:$e{fc-altactionbar} layout:$d{!ui-horizontal cellType:middle cellStyle:$s{padding-right:8px;}}
	alternate:true components:$f{altActionButtons}
	
// Actions

