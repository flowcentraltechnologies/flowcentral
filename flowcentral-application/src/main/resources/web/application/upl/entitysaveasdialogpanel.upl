!fc-entitysaveasdialogpanel
	dialogCaption:$m{entitysaveasdialogpanel.caption}
    dialogBodyComponents:$c{entityFormBodyPanel}
    dialogActionLayout:$d{!ui-vertical style:$s{width:100%;}}
    dialogActionComponents:$c{entitySaveAsActionPanel}

// Form panel
!ui-panel:entityFormBodyPanel style:$s{width:100%;} components:$c{saveAsForm}
!fc-miniform:saveAsForm binding:inputForm
!ui-hidden:switchOnChangeHolder
	eventHandler:$f{switchOnChangeEventHandler}

// Action panel
!ui-panel:entitySaveAsActionPanel layout:$d{!ui-horizontal} components:$g{moreActionButtons}
	