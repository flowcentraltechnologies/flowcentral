<?xml version="1.0"?>
<!-- OS Messaging application -->
<application name="osmessaging"
	description="$m{osmessaging.short.description}"
	label="$m{osmessaging.label}" module="osmessaging">
	<!-- Applets -->
	<applets>
		<applet name="manageOSMessagingEndpoint"
			description="$m{messaging.osmessagingendpoint.manage}"
			label="$m{messaging.osmessagingendpoint.manage.label}" icon="mail"
			type="manage_entitylist" entity="osMessagingEndpoint"
			menuAccess="true">
			<property name="searchTable"
				value="osMessagingEndpointTable" />
			<property name="searchTable.new" value="true" />
			<property name="searchTable.report" value="true" />
			<property name="searchTable.quickFilter" value="true" />
			<property name="searchTable.basicSearchOnly" value="true" />
			<property name="createForm" value="osMessagingEndpointForm" />
			<property name="createForm.save" value="true" />
			<property name="createForm.save.next" value="true" />
			<property name="createForm.save.close" value="true" />
			<property name="maintainForm"
				value="osMessagingEndpointForm" />
			<property name="maintainForm.update" value="true" />
			<property name="maintainForm.delete" value="true" />
		</applet>
		<applet name="manageOSMessagingAsync"
			description="$m{messaging.osmessagingasync.manage}"
			label="$m{messaging.osmessagingasync.manage.label}" icon="mail"
			type="manage_entitylist" entity="osMessagingAsync"
			menuAccess="true">
			<property name="searchTable" value="osMessagingAsyncTable" />
			<property name="searchTable.new" value="false" />
			<property name="searchTable.report" value="false" />
			<property name="searchTable.quickFilter" value="true" />
			<property name="searchTable.basicSearchOnly" value="true" />
			<property name="createForm" value="osMessagingAsyncForm" />
			<property name="maintainForm" value="osMessagingAsyncForm" />
			<property name="maintainForm.update" value="false" />
			<property name="maintainForm.delete" value="false" />
		</applet>
	</applets>
	<!-- References -->
	<references>
		<reference name="osMessagingEndpointRef"
			description="$m{messaging.osmessagingendpoint.reference}"
			entity="osMessagingEndpoint" searchField="description" />
		<reference name="osMessagingAsyncRef"
			description="$m{messaging.osmessagingasync.reference}"
			entity="osMessagingAsync" searchField="endpoint" />
	</references>
	<!-- Entities -->
	<entities>
		<entity name="osMessagingEndpoint"
			description="$m{messaging.osmessagingendpoint}"
			label="$m{messaging.osmessagingendpoint.label}"
			type="com.flowcentraltech.flowcentral.messaging.entities.OSMessagingEndpoint"
			auditable="true" reportable="true">
			<field name="name"
				label="$m{messaging.osmessagingendpoint.name}" type="string"
				inputWidget="application.name" maxLen="64" basicSearch="true" />
			<field name="description"
				label="$m{messaging.osmessagingendpoint.description}" type="string"
				inputWidget="application.text" maxLen="96" />
			<field name="endpointConfig"
				label="$m{messaging.osmessagingendpoint.endpointconfig}"
				type="string" inputWidget="messagingconfiglist" maxLen="64" />
			<field name="source"
				label="$m{messaging.osmessagingendpoint.source}" type="string"
				inputWidget="messagingsourcelist" maxLen="128" />
			<field name="consumer"
				label="$m{messaging.osmessagingendpoint.consumer}" type="string"
				inputWidget="messagingconsumerlist" maxLen="64" />
			<field name="maxConcurrent"
				label="$m{messaging.osmessagingendpoint.maxconcurrent}"
				type="integer" inputWidget="application.integer" precision="2" />
			<uniqueConstraint name="nameUc"
				description="$m{messaging.osmessagingendpoint.uc.name}"
				fieldList="name" />
			<uniqueConstraint name="descUc"
				description="$m{messaging.osmessagingendpoint.uc.description}"
				fieldList="description" />
		</entity>
		<entity name="osMessagingAsync"
			description="$m{messaging.osmessagingasync}"
			label="$m{messaging.osmessagingasync.label}"
			type="com.flowcentraltech.flowcentral.messaging.entities.OSMessagingAsync"
			auditable="true" reportable="true">
			<field name="name"
				label="$m{messaging.osmessagingasync.name}" type="string"
				inputWidget="application.name" maxLen="64" basicSearch="true" />
			<field name="description"
				label="$m{messaging.osmessagingasync.description}" type="string"
				inputWidget="application.text" maxLen="96" />
			<field name="endpointConfig"
				label="$m{messaging.osmessagingasync.endpointconfig}"
				type="string" inputWidget="messagingconfiglist" maxLen="64" />
			<field name="destination"
				label="$m{messaging.osmessagingasync.destination}" type="string"
				inputWidget="messagingdestinationlist" maxLen="128" />
			<field name="producer"
				label="$m{messaging.osmessagingasync.producer}" type="string"
				inputWidget="messagingproducerlist" maxLen="64" />
			<uniqueConstraint name="nameUc"
				description="$m{messaging.osmessagingasync.uc.name}"
				fieldList="name" />
			<uniqueConstraint name="descUc"
				description="$m{messaging.osmessagingasync.uc.description}"
				fieldList="description" />
		</entity>
	</entities>
	<!-- Tables -->
	<tables>
		<table name="osMessagingEndpointTable"
			description="$m{messaging.osmessagingendpoint.table}"
			label="$m{messaging.osmessagingendpoint.table.label}"
			entity="osMessagingEndpoint" itemsPerPage="20" serialNo="true"
			basicSearch="true">
			<column field="name" renderWidget="application.name"
				widthRatio="1" linkAct="maintainAct" />
			<column field="description" renderWidget="application.text"
				widthRatio="1" />
			<column field="endpointConfig" renderWidget="application.text"
				widthRatio="1" />
			<column field="source" renderWidget="application.text"
				widthRatio="1" />
			<column field="statusDesc" renderWidget="application.text"
				label="$m{messaging.osmessagingendpoint.status}" widthRatio="1" />
			<column field="createDt" renderWidget="application.datetime"
				widthRatio="1" />
			<column field="updateDt" renderWidget="application.datetime"
				widthRatio="1" />
		</table>
		<table name="osMessagingAsyncTable"
			description="$m{messaging.osmessagingasync.table}"
			label="$m{messaging.osmessagingasync.table.label}"
			entity="osMessagingAsync" itemsPerPage="20" serialNo="true"
			basicSearch="true">
			<column field="name" renderWidget="application.name"
				widthRatio="1" linkAct="maintainAct" />
			<column field="description" renderWidget="application.text"
				widthRatio="1" />
			<column field="endpointConfig" renderWidget="application.text"
				widthRatio="1" />
			<column field="destination" renderWidget="application.text"
				widthRatio="1" />
			<column field="statusDesc" renderWidget="application.text"
				label="$m{messaging.osmessagingasync.status}" widthRatio="1" />
			<column field="createDt" renderWidget="application.datetime"
				widthRatio="1" />
			<column field="updateDt" renderWidget="application.datetime"
				widthRatio="1" />
		</table>
	</tables>
	<!-- Forms -->
	<forms>
		<form name="osMessagingEndpointForm"
			description="$m{messaging.osmessagingendpoint.form}"
			entity="osMessagingEndpoint">
			<tab name="basicDetails"
				label="$m{messaging.osmessagingendpoint.form.basicdetails}"
				contentType="miniform">
				<section name="osMessagingEndpointDetails" columns="type_2"
					label="$m{messaging.osmessagingendpoint.form.section.basicdetails}">
					<field name="name" column="0" required="true" />
					<field name="description" column="0" required="true" />
					<field name="status" column="1" required="true" />
				</section>
				<section name="sourceDetails" columns="type_2"
					label="$m{messaging.osmessagingendpoint.form.section.source}">
					<field name="endpointConfig" column="0" switchOnChange="true"
						required="true" />
					<field name="source" column="1" required="true" />
				</section>
				<section name="consumerDetails" columns="type_2"
					label="$m{messaging.osmessagingendpoint.form.section.consumer}">
					<field name="consumer" column="0" required="true" />
					<field name="maxConcurrent" column="1" required="true" />
				</section>
			</tab>
			<tab name="changeLog" label="$m{application.form.audit}"
				contentType="miniform_changelog" />
		</form>
		<form name="osMessagingAsyncForm"
			description="$m{messaging.osmessagingasync.form}"
			entity="osMessagingAsync">
			<tab name="basicDetails"
				label="$m{messaging.osmessagingasync.form.basicdetails}"
				contentType="miniform">
				<section name="osMessagingAsyncDetails" columns="type_2"
					label="$m{messaging.osmessagingasync.form.section.basicdetails}">
					<field name="name" column="0" required="true" />
					<field name="description" column="0" required="true" />
					<field name="status" column="1" required="true" />
				</section>
				<section name="destinationDetails" columns="type_2"
					label="$m{messaging.osmessagingasync.form.section.destination}">
					<field name="endpointConfig" column="0" switchOnChange="true"
						required="true" />
					<field name="destination" column="1" required="true" />
				</section>
				<section name="producerDetails" columns="type_2"
					label="$m{messaging.osmessagingasync.form.section.producer}">
					<field name="producer" column="0" required="true" />
				</section>
			</tab>
			<tab name="changeLog" label="$m{application.form.audit}"
				contentType="miniform_changelog" />
		</form>
	</forms>
</application>